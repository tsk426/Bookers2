<%= render 'layouts/header' %>
<%= render 'layouts/flash' %>

<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-3">
<%= render 'layouts/info', user: @user.id %>
</div>

<div class="col-md-8 offset-md-1">
<h1> Books </h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  <thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>

<%= render 'layouts/footer' %>