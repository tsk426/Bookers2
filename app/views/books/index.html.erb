<%= render 'layouts/header' %>

<main>
<p id="notice"><%= render 'layouts/flash' %></p>
<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-3">
<%= render 'layouts/info', new_book: @book %>
</div>

<div class="col-md-8 offset-md-1">
<h1> Books </h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  <thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td>
        <% if book.user.profile_image.attached? %> <!-- @find_bookではなくbookを使用 -->
          <%= link_to user_path(book.user) do %> <!-- book.userに修正 -->
          <%= image_tag book.user.profile_image, size: "80x80" %> <!-- book.userに修正 -->
        <% end %>
        <% else %>
          <%= link_to user_path(book.user) do %> <!-- book.userに修正 -->
          <%= image_tag "no_image.jpg", alt: "No image available" %>
          <% end %>
        <% end %>
      </td>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
</div>
</div>
</main>

<%= render 'layouts/footer' %>