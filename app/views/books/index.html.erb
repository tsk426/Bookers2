<%= render 'layouts/header' %>

<h1> User Info </h1>
<div>image</div>
<div>name test</div>
<div>introduction</div>

<%= link_to '編集ボタン', edit_user_registration_path %>

<%= form_with model: @book do |f| %>
  <div>
    <%= f.label :title, 'Title' %> <br>
    <%= f.text_field :title %></br>
  </div>

  <div>
    <%= f.label :body, 'Opinion' %> <br>
    <%= f.text_area :body %> 
  </div>

  <div>
    <%= f.submit "Create Book" %>
  </div>
<% end %>


<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  <thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>