<% if book.favorited_by?(current_user) %>
  <%= link_to book.favorites.count, book_favorites_path(book), method: :delete, remote: true, data: { type: :script }, class: "glyphicon glyphicon-heart" %>
<% else %>
  <%= link_to book.favorites.count, book_favorites_path(book), method: :post, remote: true, data: { type: :script }, class: "glyphicon glyphicon-heart-empty" %>
<% end %>