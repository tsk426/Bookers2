<%= render 'layouts/header' %>
<%= render 'layouts/flash' %>

<%= render 'layouts/info' %>
<%= render 'layouts/post' %>

<div class="col-md-8 offset-md-1">
<h1> Books </h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= render 'layouts/footer' %>