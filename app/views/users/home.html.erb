<%= render 'layouts/header' %>

<h1> User Info </h1>
<tbody>
<tr>
<td>
<% if current_user.image.attached? %>
<p><%= image_tag user.image %></p>
<% else %>
<p><%= image_tag "no_image.jpg", alt: "No image available" %></p>
<% end %>
</td>
</tr>
</tbody>

<div> Name  <%= current_user.name %> </div>
<div> Introduction  <%= current_user.introduction %> </div>
<%= link_to '編集ボタン', edit_user_registration_path %>

<%= form_with model: @book do |f| %>
    <%= f.label :title, 'Title' %> <br>
    <%= f.text_field :title %> <br>
  
    <%= f.label :body, 'Opinion' %> <br>
    <%= f.text_area :body %> <br>
  
  
    <%= f.submit "Create Book" %>
<% end %>


<h1> Books </h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render 'layouts/footer' %>