<%= render 'layouts/header' %>
<h1> User Info </h1>
<tbody>
<tr>
<td>
<% if current_user.image.attached? %>
<p><%= image_tag user.image %></p>
<% else %>
<p><%= image_tag "no_image.jpg", alt: "No image available" %></p>
<% end %>
</td>
</tr>
</tbody>

<div> Name  <%= current_user.name %> </div>
<div> Introduction  <%= current_user.introduction %> </div>
<%= link_to '編集ボタン', edit_user_registration_path %>

<%= form_with model: @book do |f| %>
<div>
<%= f.label :title, 'Title' %> <br>
<%= f.text_field :title %>
</div>
<div>
<%= f.label :body, 'Opinion' %> <br>
<%= f.text_area :body %>
</div>
<div>
<%= f.submit "Create Book" %>
</div>
<% end %> 

<h1> Users </h1>
<table>
<thead>
<tr>
<th>Image</th>
<th>Name</th>
</tr>
</thead>
<tbody>
<tr>
<% @users.each do |user| %>
<td>
<% if user.image.attached? %>
<p><%= image_tag user.image %></p>
<% else %>
<p><%= image_tag "no_image.jpg", alt: "No image available" %></p>
<% end %>
</td>
<td><%= user.name %></td>
<td><%= link_to "Show", user_path(user) %></td>
</tr>
<% end %>
</tbody>
</table>

<%= render 'layouts/footer' %>