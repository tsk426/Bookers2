<%= render 'layouts/header' %>

<h1> User Info </h1>

<%= form_with(model: current_user, local: true) do |f| %>
<div class="field">
  <%= f.label :image %>
  <%= f.file_field :image %>

  <% if current_user.image.attached? %>
    <p>現在の画像: <%= image_tag current_user.image %></p>
  <% else %>
    <p>現在の画像: <%= image_tag "no_image.jpg", alt: "No image available" %></p>
  <% end %>
</div>

<div>name/test</div>
<div>introduction</div>

<%= link_to '編集ボタン', edit_user_registration_path %>
<% end %>

<%= form_with model: @book do |f| %>
  <div>
    <%= f.label :title, 'Title' %> <br>
    <%= f.text_field :title %></br>
  </div>

  <div>
    <%= f.label :body, 'Opinion' %> <br>
    <%= f.text_area :body %> 
  </div>

  <div>
    <%= f.submit "Create Book" %>
  </div>
<% end %>

<h1> Users </h1>
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <% if user.image.attached? %>
            <p><%= image_tag user.image %></p>
          <% else %>
            <p><%= image_tag "no_image.jpg", alt: "No image available" %></p>
          <% end %>
        </td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>