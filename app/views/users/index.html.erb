<%= render 'layouts/header' %>
<h1> User Info </h1>
<%= render 'layouts/info', user: current_user %>

<%= form_with model: @book do |f| %>
  <div>
    <%= f.label :title, 'Title' %> <br>
    <%= f.text_field :title %></br>
  </div>

  <div>
    <%= f.label :body, 'Opinion' %> <br>
    <%= f.text_area :body %> 
  </div>

  <div>
    <%= f.submit "Create Book" %>
  </div>
<% end %>

<h1> Users </h1>
<table>
<thead>
<tr>
<th>Image</th>
<th>Name</th>
</tr>
</thead>
<tbody>
<tr>
<% @users.each do |user| %>
<td>
<% if user.image.attached? %>
<p><%= image_tag user.image %></p>
<% else %>
<p><%= image_tag "no_image.jpg", alt: "No image available" %></p>
<% end %>
</td>
<td><%= user.name %></td>
<td><%= link_to "Show", user_path(user) %></td>
</tr>
<% end %>
</tbody>
</table>

<%= render 'layouts/footer' %>