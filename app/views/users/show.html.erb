<%= render 'layouts/header' %>

<h1> User Info </h1>
<%= render 'layouts/info' %>
<%= render 'layouts/post' %>

<%= form_with model: @book do |f| %>
  <div>
    <%= f.label :title, 'Title' %> <br>
    <%= f.text_field :title %></br>
  </div>

  <div>
    <%= f.label :body, 'Opinion' %> <br>
    <%= f.text_area :body %> 
  </div>

  <div>
    <%= f.submit "Create Book" %>
  </div>
<% end %>


<h1> Books </h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
      <td>
        <%= link_to book.title, book_path(book) %>
      </td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= render 'layouts/footer' %>