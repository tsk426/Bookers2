<%= render 'layouts/header' %>

<main>
<p id="notice"><%= render 'layouts/flash' %></p>
<div class="container px-5 px-sm-0">
  <div class="row">
  <div class="col-md-3">
    <%= render 'users/showinfo', user: @user, book: @book %>
  </div>
  <div class="col-md-8 offset-md-1">
  <h1> Books </h1>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
     <% @books.each do |book| %>
        <tr>
          <td>
            <% if book.user.profile_image.attached? %>
              <%= link_to user_path(book.user) do %>
              <%= image_tag book.user.profile_image, size: "80x80", style: "width: 80px; height: 80px;" %>
              <% end %>
            <% else %>
              <%= link_to user_path(book.user) do %>
            <%= image_tag "no_image.jpg", size: "80x80" %>
            <% end %>
            <% end %>
          </td>
          <td>
            <%= link_to book.title, book_path(book) %>
         </td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
  </dvi>
</div>
</main>


<%= render 'layouts/footer' %>